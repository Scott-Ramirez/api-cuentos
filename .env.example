# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=storyforge

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# App Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Comma-separated list. Example for dev:
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,regex:https://.*.ngrok-free.app$,regex:https://.*.ngrok.io$
# Example for production (uncomment and edit):
# CORS_ORIGINS=https://scottsoft.uk,https://api.scottsoft.uk

# Upload Configuration
UPLOAD_DESTINATION=./uploads
MAX_FILE_SIZE=5242880
